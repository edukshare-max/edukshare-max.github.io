{
  "name": "sasu-backend",
  "version": "1.0.0",
  "description": "Backend del Sistema de Promociones de Salud SASU - Universidad Autónoma de Guerrero",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node scripts/seedData.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t sasu-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env sasu-backend"
  },
  "keywords": [
    "sasu",
    "uagro",
    "universidad",
    "salud",
    "promociones",
    "carnet-digital",
    "api",
    "node.js",
    "express",
    "sequelize"
  ],
  "author": {
    "name": "Universidad Autónoma de Guerrero",
    "email": "sistemas@uagro.mx",
    "url": "https://www.uagro.mx"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uagro/sasu-backend.git"
  },
  "bugs": {
    "url": "https://github.com/uagro/sasu-backend/issues",
    "email": "soporte@uagro.mx"
  },
  "homepage": "https://sasu.uagro.mx",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "tests/*",
      "database/*"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  }
}