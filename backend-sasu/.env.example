# Configuraci贸n del servidor SASU
NODE_ENV=development
PORT=3000

# Base de datos
# Para desarrollo (SQLite)
DB_DIALECT=sqlite
DB_STORAGE=./database/sasu_development.db

# Para producci贸n (MySQL)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=sasu_production
# DB_USER=sasu_user
# DB_PASSWORD=your_secure_password

# Para servicios cloud (PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Redis (opcional para rate limiting)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# CORS Origins (separados por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://localhost:8888

# Rate Limiting
BYPASS_RATE_LIMIT=true

# Verificaci贸n de usuarios
VERIFY_USER_EXISTS=false

# Email Configuration (opcional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/sasu.log

# API Configuration
API_VERSION=1.0.0
API_TITLE=SASU API
API_DESCRIPTION=Sistema de Promociones de Salud - Universidad Aut贸noma de Guerrero

# External Services
UNSPLASH_ACCESS_KEY=your_unsplash_key_for_images
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Monitoring (opcional)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# NEW_RELIC_LICENSE_KEY=your_new_relic_key